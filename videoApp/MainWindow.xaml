<Window x:Class="videoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:videoApp"
        mc:Ignorable="d"
        Title="YOUTUBE SHORTIFY 2.0" Height="450" Width="800">
        
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Tài khoản:" Width="450" />
            <TextBox x:Name="txtUsername" Width="450" />

            <TextBlock Text="Mật khẩu:" Width="450" />
            <PasswordBox x:Name="txtPassword" Width="450" />

            <Button Content="Đăng nhập" Click="btnLogin_Click" Width="450" />
        </StackPanel>
    </Grid>
</Window>
